<div class="main-title">Loop17</div>

<body>
  <div class="content">
    <a class="js-modal-open" href="" data-target="modal01">はじめる</a>
    <a class="js-modal-open" href="" data-target="modal02">ログイン</a></a>
  </div>
  <div id="modal01" class="modal js-modal">
    <div class="modal__bg js-modal-close"></div>
    <div class="modal__content">

      <h2>Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "homes/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="actions">
          <%= f.submit "はじめる" %>
        </div>
      <% end %>
    </div>

  </div>
  <div id="modal02" class="modal js-modal">
    <div class="modal__bg js-modal-close"></div>
    <div class="modal__content">

      <h2>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>

    </div>
  </div>
</body>
